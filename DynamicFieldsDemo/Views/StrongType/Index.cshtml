@model DynamicFieldsDemo.Models.StrongViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Strong type Registration form</h2>

@using( Html.BeginForm("Post", "StrongType", FormMethod.Post))
{ 
	@Html.AntiForgeryToken()

    <div class="form-horizontal">
		
		<div class="form-group">
			@Html.LabelFor(m => m.Name)
			<div class="col-md-10">
				@Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">	
			@Html.LabelFor(m => m.Value)
			<div class="col-md-10">
				@Html.EditorFor(m => m.Value,  new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(m => m.Value, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" class="btn btn-block btn-primary" /> 
			</div>
		</div>
    </div>

}


